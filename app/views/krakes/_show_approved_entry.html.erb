<div class="show-entry">
  <div class="approval-score">
    Approval Score: <strong><%= @approval_score %></strong>
  </div>
  <div class="time-stamp pull-right">
    approved <%= time_ago_in_words(@approved_entry.created_at) %> ago, created by <%= User.find_by_id(@best_entry.user_id).username %>
  </div>
  <p class="entry-description"><%= @approved_entry.description %></p>
  <p class="entry-url">
    <% if @approved_entry.url.empty? %>
      No weblink added yet.
    <% else %>
      <%= link_to "#{@approved_entry.url}", @approved_entry.url, target: "_blank" %>
    <% end %>
  </p>
  <%= render "entries/entry_actions" %>
</div>